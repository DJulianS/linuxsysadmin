apt install -y apt-transport-https ca-certificates curl software-properties-common
curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/debian $(lsb_release -cs) stable"
apt update
apt-cache policy docker-ce


sudo apt install docker-ce

nano docker-compose.yml
version: '3'

services:
  wordpress:
    image: wordpress
    ports:
      - "8081:80"
    environment:
      WORDPRESS_DB_HOST: db
      WORDPRESS_DB_USER: julian
      WORDPRESS_DB_PASSWORD: julian
      WORDPRESS_DB_NAME: wordpress
    volumes:
      - ./wordpress:/var/www/html

  db:
    image: mysql:5.7
    environment:
      MYSQL_ROOT_PASSWORD: julian
      MYSQL_DATABASE: wordpress
      MYSQL_USER: julian
      MYSQL_PASSWORD: julian


docker run -d -p 5000:5000 --restart=always --name registry registry:2
docker tag wordpress localhost:5000/wordpress
docker push localhost:5000/wordpress



nano docker-compose-registry.yml
version: '3'

services:
  wordpress:
    image: localhost:5000/wordpress
    ports:
      - "8082:80"
    environment:
      WORDPRESS_DB_HOST: db
      WORDPRESS_DB_USER: julian
      WORDPRESS_DB_PASSWORD: julian
      WORDPRESS_DB_NAME: wordpress
    volumes:
      - ./wordpress:/var/www/html

  db:
    image: mysql:5.7
    environment:
      MYSQL_ROOT_PASSWORD: julian
      MYSQL_DATABASE: wordpress
      MYSQL_USER: julian
      MYSQL_PASSWORD: julian

docker-compose -f docker-compose-registry.yml up -d
